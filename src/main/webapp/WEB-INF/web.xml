<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"> 

	<description><![CDATA[HelloWeb]]></description>
	<display-name>HelloWeb</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            classpath:/applicationContext-dao.xml
            classpath:/applicationContext-security.xml
            classpath:/applicationContext-service.xml
            classpath:/applicationContext-hibernate.xml
			/WEB-INF/websockets.xml
		</param-value>
	</context-param>
	
    <filter>
        <filter-name>httpWebSocketFilter</filter-name>
        <filter-class>com.syncnapsis.utils.spring.FilterToBeanProxy</filter-class>
        <init-param>
            <param-name>targetBean</param-name>
            <param-value>httpFallbackEngine</param-value>
        </init-param>
    </filter>

    <filter-mapping>
      	<filter-name>httpWebSocketFilter</filter-name>
      	<url-pattern>/ws</url-pattern>
    </filter-mapping>	
    
    <servlet>
    	<servlet-name>jettyWebSocketServlet</servlet-name>
    	<servlet-class>com.syncnapsis.utils.spring.ServletToBeanProxy</servlet-class>
    	<init-param>
            <param-name>targetBean</param-name>
            <param-value>jettyEngine</param-value>
    	</init-param>
    </servlet>
    
    <servlet-mapping>
      	<servlet-name>jettyWebSocketServlet</servlet-name>
      	<url-pattern>/ws</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>actionFilter</filter-name>
        <filter-class>com.syncnapsis.utils.spring.FilterToBeanProxy</filter-class>
        <init-param>
            <param-name>targetBean</param-name>
            <param-value>actionFilter</param-value>
        </init-param>
    </filter>

    <filter-mapping>
      	<filter-name>actionFilter</filter-name>
      	<url-pattern>/action</url-pattern>
    </filter-mapping>	
    
    <filter>
        <filter-name>localeFilter</filter-name>
        <filter-class>com.syncnapsis.utils.spring.FilterToBeanProxy</filter-class>
        <init-param>
            <param-name>targetBean</param-name>
            <param-value>localeFilter</param-value>
        </init-param>
    </filter>

    <filter-mapping>
      	<filter-name>localeFilter</filter-name>
      	<url-pattern>/lang/*</url-pattern>
    </filter-mapping>	
    
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!--
	<icon>
		<small-icon></small-icon>
		<large-icon></large-icon>
	</icon>
	-->

	<!-- /////////// -->
	<!-- Error Pages -->
	<!-- NOTE: the exception page must be linked in the bypass parameter
		of the authenticator filter. Otherwise, a deadloop might occur.
	<error-page>
	  <exception-type>java.lang.Throwable</exception-type>
	  <location>/error/exception.html.jsp</location>
	</error-page>
	-->
	<!-- SC_NOT_FOUND
	<error-page>
	  <error-code>404</error-code>
	  <location>/error/404.html.jsp</location>
	</error-page>
	-->
	<!-- SC_SERVICE_UNAVAILABLE
	<error-page>
	  <error-code>503</error-code>
	  <location>/error/503.html.jsp</location>
	</error-page>
	-->
	<!-- /////////// -->

	<!-- /////////// -->
	<!-- Miscellaneous -->
	<session-config>
		<session-timeout>-1</session-timeout>
	</session-config>

	<!-- MIME mapping -->
	<mime-mapping>
		<extension>doc</extension>
		<mime-type>application/vnd.ms-word</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>gif</extension>
		<mime-type>image/gif</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>htm</extension>
		<mime-type>text/html</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>html</extension>
		<mime-type>text/html</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>jnlp</extension>
		<mime-type>application/x-java-jnlp-file</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>jpeg</extension>
		<mime-type>image/jpeg</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>jpg</extension>
		<mime-type>image/jpeg</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>js</extension>
		<mime-type>application/x-javascript</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>pdf</extension>
		<mime-type>application/pdf</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>png</extension>
		<mime-type>image/png</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>txt</extension>
		<mime-type>text/plain</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>xls</extension>
		<mime-type>application/vnd.ms-excel</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>xml</extension>
		<mime-type>text/xml</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>xul</extension>
		<mime-type>application/vnd.mozilla.xul-xml</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>zip</extension>
		<mime-type>application/x-zip</mime-type>
	</mime-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>	
	</welcome-file-list>
</web-app>
